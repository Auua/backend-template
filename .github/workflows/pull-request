name: create PR
on:
  push:
    branches-ignore: main
jobs:
  build:
    steps:
      - name: create pull request
        run: gh pr create -B main -H ${{ github.ref_name }} --title 'Merge ${{ github.ref_name }} into main' --body 'Created by Github action'
        env:
            GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
